# ===========================================
# Django Settings для Amvera Cloud
# ===========================================

# ⚠️ ВАЖНО: Измените SECRET_KEY в продакшене!
# Сгенерируйте новый ключ: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=django-insecure-change-this-in-production-use-secure-key

# Режим отладки (False для production!)
DJANGO_DEBUG=False

# Разрешенные хосты (домены)
# Для одного домена: DJANGO_ALLOWED_HOSTS=example.amvera.ru
# Для нескольких: DJANGO_ALLOWED_HOSTS=example.amvera.ru,www.example.amvera.ru
# Для всех (не рекомендуется): DJANGO_ALLOWED_HOSTS=*
DJANGO_ALLOWED_HOSTS=*

# ===========================================
# Database (SQLite)
# ===========================================
# Путь к базе данных (используем persistence mount в /data)
DJANGO_DB_PATH=/data/db.sqlite3